.tooltip
  position absolute
  padding 10px 15px
  background $dark-gray
  margin 0
  display none
  color $whitegray
  font-size 14px
  margin-top 8px
  margin-left 4px
  border-radius 3px

  &:before
    content '\A'
    border-style solid
    border-width 0 6px 6px 6px
    border-color transparent transparent $dark-gray transparent
    position absolute
    top -6px

